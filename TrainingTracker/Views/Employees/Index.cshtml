@model PaginatedList<TrainingTracker.Models.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron" style="text-align:center; padding:1em; margin:0;">
<h1>Employees</h1>
    <hr />
    <div class="btn-group-vertical text-center">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                Search Employees: <input placeholder="John Smith..." type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <input type="submit" value="Search" class="btn btn-info btn-sm" />
            </div>
        </form>
        <hr />
        <a class="btn btn-info btn-sm" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Filter by Surname</a>
        <a asp-action="Index" class="btn btn-info btn-sm mt-1">Remove Filters/Search</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-sm-4  mb-2 mt-2 text-center">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create A New Employee </h5>
                <a class="btn btn-success mt-1" asp-action="Create"><i class="fas fa-user-plus"></i></a>
            </div>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-sm-4  mb-2 mt-2 text-center">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)</h5>
                    <p class="card-text">
                        <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="btn btn-primary fas fa-user-edit mb-1"></i></a>
                        <a asp-controller="Progresses" asp-action="Index" asp-route-id="@item.EmployeeId"><i class="btn mb-1 btn-primary fas fa-list-alt"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeId"><i class="btn btn-outline-danger fas mb-1 fa-trash"></i></a>
                    </p>
                </div>
            </div>
        </div>

    }
</div>
<hr />
@{
    var previousDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextPageDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div class="text-center">
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-info @previousDisabled">
        <i class="fas fa-arrow-circle-left"></i>
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-info @nextPageDisabled">
        <i class="fas fa-arrow-circle-right"></i>
    </a>
</div>
