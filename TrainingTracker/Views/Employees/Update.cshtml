@model TrainingTracker.Models.Employee
@{
    ViewData["Title"] = "Update or create employee";
}
<br />
<h2 class="text-info">@(Model.Id != 0 ? "Edit" : "Create") Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="fullName">Full Name</label>
            </div>
            <div class="col-6">
                <input asp-for="fullName" class="form-control" />
                <span asp-validation-for="fullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="overallProgress">Overall Progress</label>
            </div>
            <div class="col-6">
                <input asp-for="overallProgress" max="100" class="form-control" />
                <span asp-validation-for="overallProgress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <a asp-action="Index" class="btn btn-outline-danger form-control">Cancel</a>
            </div>
            <div class="col-4 offset-3">
                <button type="submit" class="btn btn-success form-control">
                    
                    @(Model.Id != 0 ? "✓" : "+")
                </button>
            </div>            
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}