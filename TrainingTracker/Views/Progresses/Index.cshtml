@model IEnumerable<TrainingTracker.Models.Progress>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="jumbotron" style="text-align:center; padding:1em; margin:0;">
    <h1>Progress Records</h1>
    <h2>
        @ViewData["EmployeeName"]

    </h2>

    <hr />
    <a asp-controller="Employees" asp-action="Index" class="btn btn-info btn-lg mt-1">Go to Employee List</a>
    <a asp-controller="Training" asp-action="Index" class="btn btn-info btn-lg mt-1">Go to Training Settings</a>

</div>
<hr />

