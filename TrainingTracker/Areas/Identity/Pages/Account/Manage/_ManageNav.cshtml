@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="btn-group-vertical">
    <ul class="nav nav-pills flex-column">
        <li class="nav-item"><a class="btn btn-outline-info mb-1 nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
        <li class="nav-item"><a class="btn btn-outline-info mb-1 nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
        <li class="nav-item"><a class="btn btn-outline-info mb-1  nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
        <li class="nav-item"><a class="btn btn-outline-info mb-1  nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
        <li class="nav-item"><a class="btn btn-outline-info mb-1  nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
        <li class="nav-item text-center mx-5">
            <form class="form-inline mt-2 mb-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-lg btn-outline-danger nav-link "><i class="fas fa-sign-out-alt"></i> Logout</button>
            </form>
        </li>
    </ul>
    <hr />
</div>
